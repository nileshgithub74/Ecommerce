{
  "name": "ecommerce-e2e-tests",
  "version": "1.0.0",
  "description": "E-Commerce QA Automation Framework with Playwright and TypeScript",
  "main": "index.js",
  "scripts": {
    "setup": "node scripts/install.js",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:parallel": "playwright test --workers=4",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=mobile-chrome",
    "test:visual": "playwright test --project=visual-tests",
    "test:api": "playwright test --project=api-tests",
    "test:performance": "playwright test tests/performance/",
    "test:auth": "playwright test tests/auth/",
    "test:cart": "playwright test tests/cart/",
    "test:checkout": "playwright test tests/checkout/",
    "report": "playwright show-report",
    "install-browsers": "playwright install",
    "codegen": "playwright codegen localhost:5173",
    "clean": "rimraf test-results playwright-report screenshots",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "playwright",
    "typescript",
    "e2e",
    "testing",
    "automation",
    "ecommerce"
  ],
  "author": "QA Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "dotenv": "^16.4.5",
    "rimraf": "^5.0.5",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "wait-on": "^7.2.0"
  }
}