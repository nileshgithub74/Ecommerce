# Environment variables for E2E tests

# Application URLs
BASE_URL=http://localhost:5173
API_BASE_URL=http://localhost:3000/api

# Test user credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=password123

# Admin credentials (if needed)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Payment test credentials
TEST_CARD_NUMBER=4111111111111111
TEST_CARD_EXPIRY=12/25
TEST_CARD_CVV=123

# Database connection (if needed for test data setup)
TEST_DB_URL=mongodb://localhost:27017/ecommerce_test

# External service URLs (if applicable)
STRIPE_TEST_KEY=sk_test_...
PAYPAL_TEST_CLIENT_ID=...

# Test configuration
HEADLESS=true
SLOW_MO=0
TIMEOUT=30000
RETRIES=2

# CI/CD specific
CI=false
GITHUB_TOKEN=...

# Screenshot and video settings
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_FAILURE=true

# Parallel execution
WORKERS=4
MAX_FAILURES=5

# Browser settings
BROWSER=chromium
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720

# Test data
GENERATE_TEST_DATA=true
CLEANUP_TEST_DATA=true

# Reporting
GENERATE_HTML_REPORT=true
GENERATE_JSON_REPORT=true
GENERATE_JUNIT_REPORT=true

# Performance thresholds
MAX_PAGE_LOAD_TIME=3000
MAX_API_RESPONSE_TIME=1000
MAX_MEMORY_USAGE=50

# Visual regression
VISUAL_THRESHOLD=0.2
UPDATE_SNAPSHOTS=false